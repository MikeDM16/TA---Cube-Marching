<?xml version="1.0" ?>
<project name="Voxels" width="512" height="512">
	<assets>
		<constants>
			<constant name="GridSize" value = "256" />
			<constant name="nr_voxels" value = "15625000" />
			<constant name="size" value = "250" />
		</constants>

		<attributes>
			<attribute name="GridSize" type="PASS" data="INT" value="GridSize" />
			<attribute name="nr_voxels" type="PASS" data="INT" value="nr_voxels" />
			<attribute name="size" type="PASS" data="INT" value="size" />
			<attribute name="ISO_LEVEL" type="COLOR" data="FLOAT" value=0.20/>
		</attributes>

		<scenes>
			<scene name="Dummy" > 
				<buffers name="positions" primitive="POINTS" material="showRays">
					<position name="dummy" fromLibrary="Voxels" />
				</buffers>	
			</scene>
		</scenes>
	
		<lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-1.5" z="-2" />
			</light>
		</lights>

		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60 NEAR=0.1 FAR=20.0 />
				<POSITION x=-5 y=0.0 z=0.0 />
				<VIEW x=1.0 y=0.0 z=0.0 />
				<UP x=0 y=1 z=0 />
			</camera>
		</cameras>
		
		<materialLibs>
			<materialLib filename="voxels.mlib"/>
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="voxels" default="true">
			<pass class="default" name="showVoxels">
				<scenes instances = "nr_voxels">
					<scene name="Dummy" />
				</scenes>
				<lights>
					<light name="Sun" />
				</lights>
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<materialMaps>			
					<map fromMaterial="*" toLibrary="Voxels" toMaterial="showVoxels" />
				</materialMaps>				
			</pass>
		</pipeline>
	</pipelines>

	<interface>
		<window label="Voxels" >
			<var label="ISO_LEVEL" type="COLOR" context="Voxels::showVoxels"
					component="ISO_LEVEL" def="min=0 max=1 step=0.01" />		
		</window>
	</interface>
</project>